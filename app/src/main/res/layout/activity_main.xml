<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity"
    >

    <include
        layout="@layout/content_main"
        app:layout_anchor="@+id/gridview"
        app:layout_anchorGravity="right|bottom" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="266dp"
        android:layout_height="264dp"
        android:layout_alignTop="@+id/gridview"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp"
        android:contentDescription="@string/_GVbackground"
        app:srcCompat="@drawable/greenbg" />

    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:columnWidth="0dp"
        android:gravity="center"
        android:horizontalSpacing="-150dp"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        android:verticalSpacing="7dp"
        android:layout_centerInParent="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="500dp"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:src="@drawable/rotate_c" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabCC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="500dp"
        android:layout_marginStart="300dp"
        android:layout_marginLeft="300dp"
        android:src="@drawable/rotate_cc" />

</RelativeLayout>